{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-kvm-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_interface": "virtio",
      "disk_size": "95000M",
      "format": "qcow2",
      "headless": true,
      "host_port_max": 2229,
      "host_port_min": 2222,
      "http_directory": "centos",
      "http_port_max": 10089,
      "http_port_min": 10082,
      "iso_checksum": "sha256:47ab14778c823acae2ee6d365d76a9aed3f95bb8d0add23a06536b58bb5293c0",
      "iso_url": "http://repos.dfw.quadranet.com/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-minimal.iso",
      "net_device": "virtio-net",
      "output_directory": "centos8-output",
      "qemuargs": [
        [
          "-m",
          "2048M"
        ],
        [
          "-serial",
          "file:serial.out"
        ],
        [
          "-smp",
          "cpus=1,maxcpus=16,cores=2"
        ]
      ],
      "shutdown_command": "shutdown -P now",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_timeout": "2400s",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "centos8-base"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "dnf install -y epel-release && dnf update -y",
        "dnf install -y wget htop nmon",
        "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo -y && dnf update -y",
        "dnf install -y docker-ce docker-ce-cli",
        "systemctl enable docker && systemctl start docker",
        "groupadd docker || true",
        "dnf clean all",
        "sed -i '/swap/s/^/#/g' /etc/fstab"
      ],
      "pause_before": "10s",
      "type": "shell"
    }
  ]
}
