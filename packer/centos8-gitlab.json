{
  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": true,
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-serial", "file:serial.out" ],
        [ "-smp", "cpus=1,maxcpus=16,cores=2" ]
      ],
      "disk_interface": "virtio",
      "disk_size": 100000,
      "format": "qcow2",
      "net_device": "virtio-net",
      
      "iso_url": "http://centos.mirror.lstn.net/8.1.1911/isos/x86_64/CentOS-8.1.1911-x86_64-dvd1.iso",
      "iso_checksum": "3ee3f4ea1538e026fff763e2b284a6f20b259d91d1ad5688f5783a67d279423b",
      "iso_checksum_type": "sha256",


      "vm_name": "centos8-gitlab",
      "output_directory": "centos8-gitlab-output",

      "http_directory": "centos",
      "http_port_min": 10082,
      "http_port_max": 10089,

      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,

      "ssh_username": "root",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "1200s",

      "boot_wait": "10s",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-kvm-ks.cfg<enter><wait>"
      ],

      "shutdown_command": "shutdown -P now"
    }
  ],

  "provisioners":
  [
    {
      "type": "shell",
      "pause_before": "10s",
      "inline": [
        "echo '%wheel        ALL=(ALL)       NOPASSWD: ALL' >> /etc/sudoers",
        "dnf update -y && dnf install epel-release -y && dnf update -y",
        "dnf install htop nmon",
        "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo -y && dnf update -y",
        "dnf install -y docker-ce docker-ce-cli",
        "systemctl enable docker && systemctl start docker",
        "curl -L https://packages.gitlab.com/install/repositories/runner/gitlab-runner/script.rpm.sh > /tmp/script.rpm.sh",
        "chmod +x /tmp/script.rpm.sh && os=el dist=7 /tmp/script.rpm.sh",
        "dnf update -y && dnf install -y gitlab-runner",
        "groupadd docker || true",
        "usermod -aG docker gitlab-runner",
        "usermod -aG wheel gitlab-runner",
        "dnf clean all -y",
        "sed -i '/swap/s/^/#/g' /etc/fstab"
      ]
    }
  ]
}
