{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-kvm-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_interface": "virtio",
      "disk_size": "95000M",
      "format": "qcow2",
      "headless": true,
      "host_port_max": 2229,
      "host_port_min": 2222,
      "http_directory": "centos",
      "http_port_max": 10089,
      "http_port_min": 10082,
      "iso_checksum": "sha256:3ee3f4ea1538e026fff763e2b284a6f20b259d91d1ad5688f5783a67d279423b",
      "iso_url": "http://centos.mirror.lstn.net/8.1.1911/isos/x86_64/CentOS-8.1.1911-x86_64-dvd1.iso",
      "net_device": "virtio-net",
      "output_directory": "centos8-output",
      "qemuargs": [
        [
          "-m",
          "2048M"
        ],
        [
          "-serial",
          "file:serial.out"
        ],
        [
          "-smp",
          "cpus=1,maxcpus=16,cores=2"
        ]
      ],
      "shutdown_command": "shutdown -P now",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_timeout": "1200s",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "centos8-faas"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "echo 'deltarpm=1 >> /etc/dnf/dnf.conf",
        "dnf update -y",
        "dnf install git runc htop nmon -y",
        "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo -y \u0026\u0026 dnf update -y",
        "dnf install -y containerd",
        "mkdir -p /opt/cni/bin",
        "curl -sSL https://github.com/containernetworking/plugins/releases/download/v0.8.7/cni-plugins-linux-amd64-v0.8.7.tgz | tar -xz -C /opt/cni/bin \u0026\u0026 ls -la /opt/cni/bin",
        "curl -sSL https://github.com/openfaas/faas-cli/releases/download/0.12.13/faas-cli > /usr/local/bin/faas-cli \u0026\u0026 chmod 777 /usr/local/bin/faas-cli",
        "curl -sSL https://github.com/openfaas/faasd/releases/download/0.9.5/faasd > /usr/local/bin/faasd \u0026\u0026 chmod 777 /usr/local/bin/faasd",
        "dnf clean all",
        "sed -i '/swap/s/^/#/g' /etc/fstab"
      ],
      "pause_before": "10s",
      "type": "shell"
    }
  ]
}
